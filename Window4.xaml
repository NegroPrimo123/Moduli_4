<Window x:Class="Moduli_4.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 4" Height="300" Width="400">
    <Grid>
        <Label Content="Введите зарплату:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="TextBoxSalary" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,30,0,0"/>

        <Label Content="Введите выслугу лет:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox x:Name="TextBoxExperience" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,90,0,0"/>

        <Button Content="Рассчитать премию" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Click="CalculateBonusButton_Click"/>

        <Label x:Name="BonusLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0" Width="350"/>
        <Button Content="Назад" HorizontalAlignment="Left" Height="45" Margin="237,195,0,0" VerticalAlignment="Top" Width="123" Click="Button_Click"/>
    </Grid>
</Window>
